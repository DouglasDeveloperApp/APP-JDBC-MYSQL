<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".AjudaActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:text="Dúvida ou sugestões entre em contato" />

    <View
        android:id="@+id/divider7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="?android:attr/listDivider" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="372dp"
        android:layout_height="248dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Digite sua mensagem ..."
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailCadastro"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:text="fvg@mouseweb.com.br"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/email"
            android:layout_width="66dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/telefone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/telefoneCadastro"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:text="Telefone: 0800 8008-4004"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/telefone"
            android:layout_width="66dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/email" />

    </LinearLayout>

    <Button
        android:id="@+id/enviarDuvida"
        android:layout_width="276dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/fundo_botao"
        android:text="Enviar" />

</LinearLayout>